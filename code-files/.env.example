# =============================================================================
# Azure OpenAI Configuration (Microsoft Foundry)
# =============================================================================
# Your Azure OpenAI endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API key (found in Azure Portal under Keys and Endpoint)
AZURE_OPENAI_API_KEY=your_api_key_here

# The name of your deployed model (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# API version (recommended: 2024-02-01 or latest)
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# Azure AI Search Configuration
# =============================================================================
# Your Azure AI Search endpoint (e.g., https://your-search-service.search.windows.net)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Azure AI Search admin API key (found in Azure Portal under Keys)
AZURE_SEARCH_API_KEY=your_search_api_key_here

# The name of your search index containing medical literature
AZURE_SEARCH_INDEX_NAME=medical-literature-index
